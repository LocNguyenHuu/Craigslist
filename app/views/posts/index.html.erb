<div class="post-banner"></div>
<div class="container">
  <h1> All posts</h1>
  <div class="col-sm-10 col-sm-offset-1 col-xs-12 blog-content">
    <% @posts.each do |post| %>
    <div class="col-xs-12">
      <div class="text-center">
        <%= image_tag @post.image.url(:medium) %>
        <h2><%= post.title %></h2>
        <h6><%= post.created_at.strftime('%b %d, %Y') %></h6>
        <h2><%=number_to_currency(post.cost)%></h2>
      </div>

      <div class="text-center">
        <%= raw(post.body).truncate(358) %>
      </div>

      <div class="text-center">
        <%= link_to "READ MORE", post_path(post) %><br>
      </div>
      <% if login?%>
      <div class="text-center">
        <%= link_to 'Edit', edit_post_path(post), class: "btn btn-default"%><br>
        <%= link_to "Delete", post_path(post), class: "btn btn-danger", method: :delete, data: {confirm: "Are you sure?"}%>
      </div>
      <%end%>
      <br>
    </div>
    <% end %>
  </div>
</div>
