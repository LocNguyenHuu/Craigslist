<div class="col-sm-11 col-xs-12 blog-content">
  <h2 class="text-center"><%= @post.title %></h2><br>
  <h2 class="text-center"><%= @post.cost %></h2><br>
  <h5 class="text-center"><%= @post.created_at.strftime('%b %d, %Y') %></h5><br>
  <%= image_tag @post.image.url %>
  <h6 class="text-center"><%= raw @post.body %></h6>
</div>
